zone:
{% for dom in dns_authoritative_toplevel %}
  - domain: "{{ dom.domain }}"
    acl: ffh_core_acl
{% if knot_secondary_dns %}
    master: dns1_remote
{% else %}
    zonefile-sync: 0
    zonefile-load: whole
    journal-content: changes
    notify: [{{ knot_secondaries | join(', ') }}]
{% endif %}
{% endfor %}
